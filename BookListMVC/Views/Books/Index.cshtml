
@{
    ViewData["Title"] = "Index";
}

<div class="container row p-0 m-0">
    @* might be 6 instead of 9*@
    <div class="col-9">
        <h2 class="text-info">Book List MVC</h2>
    </div>

    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-controller="Books" asp-action="Upsert">Create New Book</a>
    </div>

    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/bookList.js"></script>
}